<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <OnSwipe
           motion:dragDirection="dragUp"
           motion:dragScale="1"
           motion:moveWhenScrollAtTop="true"
           motion:onTouchUp="stop"
           motion:touchAnchorId="@id/recyclerView"
           motion:touchAnchorSide="top"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="32" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/titleText"
            motion:layout_constraintStart_toStartOf="@id/titleText"
            android:visibility="gone" />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:id="@+id/titleText"
            motion:layout_constraintEnd_toStartOf="@+id/imageView">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />
        </Constraint>
        <Constraint
            android:layout_marginEnd="10dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@+id/titleText"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            android:layout_marginTop="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/titleText" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/subtitleText"
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView" />
    </ConstraintSet>
</MotionScene>