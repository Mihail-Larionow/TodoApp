<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_todoapp"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.michel.todolistscreen.TodoListFragment"
        android:label="TodoListFragment"
        tools:layout="@layout/fragment_todolist">
        <action
            android:id="@+id/action_todoListFragment_to_todoItemFragment"
            app:destination="@id/todoItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/todoItemFragment"
        android:name="com.michel.todoitemscreen.TodoItemFragment"
        android:label="TodoItemFragment"
        tools:layout="@layout/fragment_todoitem"/>
</navigation>