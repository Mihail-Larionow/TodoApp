<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- text styles -->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="Text.LargeTitle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subhead">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- icon styles -->
    <style name="Icon">

    </style>

    <style name="Icon.NoPriority">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Icon.HighPriority" parent="Icon.NoPriority">
        <item name="android:src">@drawable/ic_high_priority</item>
        <item name="android:tint">@color/red</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Icon.LowPriority">
        <item name="android:src">@drawable/ic_low_priority</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Icon.Info">
        <item name="android:src">@drawable/ic_info</item>
        <item name="android:tint">@color/label_tertiary</item>
    </style>

    <!-- checkbox styles -->
    <style name="CheckBox">
        <item name="android:drawable">@drawable/checkbox</item>
    </style>

    <style name="CheckBox.HighPriority">
        <item name="android:button">@drawable/checkbox_high</item>
    </style>

    <!-- checkbox styles -->
    <style name="Background">
        <item name="android:background">@color/back_primary</item>
    </style>

    <style name="Recycler">
        <item name="android:background">@color/back_secondary</item>
    </style>
</resources>